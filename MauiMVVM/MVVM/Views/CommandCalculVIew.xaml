<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMVVM.MVVM.Views.CommandCalculVIew"
             Title="CommandCalculVIew">
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            <Entry Placeholder="Number 1" Text="{Binding Number1}"/>
            <Entry Placeholder="Number 2" Text="{Binding Number2}"/>
            <Entry Placeholder="Result" Text="{Binding Result}"/>

            <Button Text="Calcul" 
                    HorizontalOptions="Center"
                    Command="{Binding AddCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>